  <script>
    let curRangeDateStart = "{{startdate}}";
    let curRangeDateEnd = "{{enddate}}";
    let orderByStatus = "{{orderByStatus}}";
    let urlGetCompletionbyDirectorateTop = "{{route('dashboard.completion.get-completion-by-directorate')}}" + "?startdate=" + curRangeDateStart + "&" + "enddate=" + curRangeDateEnd + "&" + "orderbystatus=" + orderByStatus;

    $(document).ready(function () {
      $(".mlw-li").hide()
      $(".mlw-li-dashboard").show()


      $('#orderbystatus').val(orderByStatus).change();
      //$('#orderbystatus').selectize();


      $('#range-date-completion').val(function () {

        return curRangeDateStart.split("-").reverse().join("/") + " to " + curRangeDateEnd.split("-").reverse().join("/");
      });
      $('#range-date-completion').flatpickr({
        mode: "range",
        dateFormat: "d/m/Y",
        conjunction: " - ",
        onChange: function (selectedDates, dateStr, instance) {
          //console.log(selectedDates,dateStr);
        },
        onClose: function (selectedDates, dateStr, instance) {


          let arrDate = dateStr.split(" to ");

          curRangeDateStart = arrDate[0].split("/").reverse().join("-");
          curRangeDateEnd = arrDate[1].split("/").reverse().join("-");
          console.log(curRangeDateStart, curRangeDateEnd);
          orderByStatus = $('select[name=orderbystatus] option').filter(':selected').val()
          window.location.href = "{{route('dashboard.completion.index-by-directorate')}}" + "?startdate=" + curRangeDateStart + "&" + "enddate=" + curRangeDateEnd + "&" + "orderbystatus=" + orderByStatus;

        }
      });

      $(document).delegate("#orderbystatus", "change", function () {
        orderByStatus = $('select[name=orderbystatus] option').filter(':selected').val()
        window.location.href = "{{route('dashboard.completion.index-by-directorate')}}" + "?startdate=" + curRangeDateStart + "&" + "enddate=" + curRangeDateEnd + "&" + "orderbystatus=" + orderByStatus;
      });



      @if(flashMessage('error'))
      let urllogout = "{{ route('logout')}}"
      Swal.fire({
        icon: 'error',
